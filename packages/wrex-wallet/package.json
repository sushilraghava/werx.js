{
  "name": "@wrex/wrex-wallet",
  "version": "2.0.0",
  "description": "A key management tool for the WREX Hypergraph Network",
  "author": "Hoang Duc Tri",
  "email": "trihd123@gmail.com",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/types/index.d.ts",
  "homepage": "https://github.com/ductridev/wrex.js#readme",
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "npx tsc && tsc -p tsconfig.cjs.json",
    "rollup": "rollup -c ../../scripts/config/rollup.config.js",
    "prerelease": "npm run build && npm version patch",
    "release": "node ../../scripts/package/copy && npm run release:npm",
    "release:npm": "npm publish ./dist -access public",
    "release:preflight": "npm pack ./dist --dry-run"
  },
  "dependencies": {
    "@wrex/wrex-core": "1.2.2",
    "@wrex/wrex-keystore": "1.2.2",
    "@wrex/wrex-network": "1.2.2",
    "bignumber.js": "^9.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "node-localstorage": "^2.1.6"
  }
}
